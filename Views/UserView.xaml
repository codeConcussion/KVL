<UserControl
    x:Class="CodeConcussion.KVL.Views.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="WhiteSmoke"
    Width="250"
    Height="56">

    <StackPanel Orientation="Horizontal" Margin="8 16">
        <Label
            Content="_User"
            Target="User"
            Margin="4 0" />

        <TextBox
            x:Name="User"
            Text="{Binding User}"
            Height="24"
            Width="120"
            Margin="4 0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center" />

        <Button
            x:Name="Close"
            Content="OK"
            Width="56"
            Height="24"
            Margin="4 0"
            VerticalAlignment="Top" />
    </StackPanel>
</UserControl>
<UserControl
    x:Class="CodeConcussion.KVL.Views.UserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="WhiteSmoke"
    Width="242"
    Height="94">
    
    <DockPanel Margin="16">
        <DockPanel DockPanel.Dock="Top">
            <Label
                Content="_User  "
                Target="User"
                DockPanel.Dock="Left" />
            <TextBox
                x:Name="User"
                Text="{Binding User}"
                VerticalAlignment="Center" />
        </DockPanel>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="Ok"
                Content="_OK"
                Width="100"
                Margin="0 16 4 0" />
            
            <Button
                x:Name="Cancel"
                Content="_Cancel"
                Width="100"
                Margin="4 16 0 0"
                Grid.Column="1" />
        </Grid>
    </DockPanel>
</UserControl>